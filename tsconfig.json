{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "paths": {}
  },
  "include": ["src", "native/can.d.ts"]
}
