# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 2
charset = utf-8

# 4 space indentation
[*.py]
indent_style = space
indent_size = 2

# Matches the exact files either package.json or any .yml
[{*.json,*.yml,*.yaml}]
indent_style = space
indent_size = 2

[*.{js,ts,jsx,tsx,html}]
indent_style = tab
indent_size = 2

